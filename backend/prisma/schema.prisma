generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  contracts Contract[]
}

model Contract {
  id           Int           @id @default(autoincrement())
  userId       Int
  ccnl         String
  level        String
  ral          Float
  hoursPerWeek Int
  user         User          @relation(fields: [userId], references: [id])
  monthlyData  MonthlyWorkData[]
}

model MonthlyWorkData {
  id          Int      @id @default(autoincrement())
  contractId  Int
  year        Int
  month       Int
  workedHours Float
  overtime    Float
  absences    Float
  contract    Contract @relation(fields: [contractId], references: [id])
}
